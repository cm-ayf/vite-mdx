{
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "verbatimModuleSyntax": true
  },
  "include": ["vite.config.ts", "plugins/**/*.ts"]
}
